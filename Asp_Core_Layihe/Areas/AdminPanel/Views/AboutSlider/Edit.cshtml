@model AboutSlider
@{
    ViewData["Title"] = "Edit";
}

<div class="row d-flex justify-content-center">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Background Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Description
                    </th>
                
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>
                        <img style="width:100px; height:100px" src="~/img/testimonial/@Model.Image" />
                    </td>
                    <td>
                        <img style="width:100px; height:100px" src="~/img/testimonial/@Model.BackgroundImage" />
                    </td>
                    <td>
                        <p>@Model.Name</p>
                    </td>
                    <td>
                        <p>@Model.Position</p>

                    </td>
                    <td>
                        <p>@Model.Description</p>

                    </td>
                </tr>

            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Bio</h4>
                <form method="post" class="forms-sample mt-5" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Image</label>
                        <input asp-for="Photo" class="form-control" id="exampleInputUsername1" accept="image/*">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <p class="mt-3"> Background Image</p>
                        <input asp-for="BackgroundPhoto" class="form-control" id="exampleInputUsername1">
                        <span class="text-danger" asp-validation-for="BackgroundPhoto"></span>
                        <p class="mt-3">Name</p>
                        <input asp-for="Name" class="form-control" id="exampleInputUsername1">
                        <span class="text-danger" asp-validation-for="Name"></span>
                        <p class="mt-3">Position</p>
                        <input asp-for="Position" class="form-control" id="exampleInputUsername1" placeholder="Write Facebook link">
                        <span class="text-danger" asp-validation-for="Position"></span>
                        <p class="mt-3">Description</p>
                        <input asp-for="Description" class="form-control" id="exampleInputUsername1" placeholder="Write Linkedin link">
                        <span class="text-danger" asp-validation-for="Description"></span>
                        @*<textarea id="editor" asp-for="CategoryName" placeholder="Write the category name"></textarea>*@
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                </form>
                <div class="mt-3">
                    <a class="btn btn-dark text-white" asp-controller="AboutSlider" asp-action="Index">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>



