@model AboutSlider
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Home Slider</h4>
                <form method="post" class="forms-sample mt-5" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>About Image </label>
                        <input asp-for="Photo" class="form-control" id="exampleInputUsername1" accept="image/*">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <p class="mt-3">About Backgroun Image </p>
                        <input asp-for="BackgroundPhoto" class="form-control" id="exampleInputUsername1">
                        <span class="text-danger" asp-validation-for="BackgroundPhoto"></span>
                        <label class="mt-3">Name </label>
                        <input asp-for="Name" class="form-control" id="exampleInputUsername1" placeholder="Write the Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                        <p class="mt-3">Position </p>
                        <input asp-for="Position" class="form-control" id="exampleInputUsername1" placeholder="Write the Position">
                        <span class="text-danger" asp-validation-for="Position"></span>
                        <p class="mt-3"> Description</p>
                        <input asp-for="Description" class="form-control" id="exampleInputUsername1" placeholder="Write the Description">
                        <span class="text-danger" asp-validation-for="Description"></span>

                        @*<textarea id="editor" asp-for="CategoryName" placeholder="Write the category name"></textarea>*@
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                </form>
                <div class="mt-3">
                    <a class="btn btn-dark text-white" asp-controller="AboutSlider" asp-action="Index">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>


