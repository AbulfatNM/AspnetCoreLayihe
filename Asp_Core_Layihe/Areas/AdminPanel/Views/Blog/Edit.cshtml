@model Blog
@{
    ViewData["Title"] = "Edit";
}
<div class="container">

    <div class="row d-flex justify-content-center">
        <img style="width:450px; height:250px" src="~/img/blog/@Model.Image" />

    </div>
    <div class="text-center mt-3">
        <h5>BY</h5>
        <p>@Model.AppUserId</p>
        <h5 class="mt-3">Title</h5>
        <p>@Model.Title</p>
        <h5 class="mt-3">Blog Category</h5>
        <p>@ViewBag.CategoriName</p>
        <h5 class="mt-3">Description</h5>
        <p>@Model.Description</p>

        <h5 class="mt-3">Date</h5>
        <p>@Model.Date.ToString("dd/MMM/yyyy").ToUpper()</p>
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Blog</h4>
                    <form method="post" class="forms-sample mt-5" enctype="multipart/form-data">
                        <div class="form-group">
                            <h5 class="mb-3">Blog Image </h5>
                            <input asp-for="PhotoBlog" class="form-control" id="exampleInputUsername1" accept="image/*">
                            <span class="text-danger" asp-validation-for="PhotoBlog"></span>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <h5 class="mt-3">Blog Title </h5>
                            <input asp-for="Title" class="form-control" id="exampleInputUsername1" placeholder="Write the Title">
                            <span class="text-danger" asp-validation-for="Title"></span>
                            <h5 class="mt-3">Blog Description  </h5>
                            <input asp-for="Description" class="form-control" id="exampleInputUsername1" placeholder="Write the Description">
                            <span class="text-danger" asp-validation-for="Description"></span>
                            <h5 class="mt-3">Category </h5>

                            <select asp-for="CategoryId" asp-items="@( new SelectList(ViewBag.Categories,"Id","CategoryName"))">
                            </select>


                            <span asp-validation-for="CategoryId"></span>
                            <h5 class="mt-3"> Date</h5>
                            <input asp-for="Date" class="form-control" id="exampleInputUsername1" placeholder="Write the Description">
                            <span class="text-danger" asp-validation-for="Date"></span>
                            @*<textarea id="editor" asp-for="CategoryName" placeholder="Write the category name"></textarea>*@
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    </form>
                    <div class="mt-3">
                        <a class="btn btn-dark text-white" asp-controller="Blog" asp-action="Index">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}



