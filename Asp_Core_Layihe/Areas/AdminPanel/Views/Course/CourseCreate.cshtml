@model Course
@{
    ViewData["Title"] = "CourseCreate";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Course</h4>
                <form method="post" action="CourseCreate" class="forms-sample mt-5" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Category Name </label>
                        <input asp-for="Photo" class="form-control" id="exampleInputUsername1" placeholder="Write the category name" accept="image/*">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <input asp-for="Title" class="form-control" id="exampleInputUsername1" placeholder="Write the Title">
                        <span class="text-danger" asp-validation-for="Title"></span>
                        <input asp-for="Description" class="form-control" id="exampleInputUsername1" placeholder="Write the Description">
                        <span class="text-danger" asp-validation-for="Description"></span>
                        @*<textarea id="editor" asp-for="CategoryName" placeholder="Write the category name"></textarea>*@
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                </form>
                <div class="mt-3">
                    <a class="btn btn-dark text-white" asp-controller="Course" asp-action="Course">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>


