@model IEnumerable<Course>
@{
    ViewData["Title"] = "Course";
}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Course</h4>
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-success" asp-controller="Course" asp-action="CreateCourseFature">Create Course</a>
                    </div>
                    <div class="d-flex justify-content-end">
                        @if (ViewBag.SliderCount < 5)
                        {
                            <a class="btn btn-success" asp-controller="Course" asp-action="CreateCourseFature">Create Slider</a>
                        }
                    </div>

                    <div class="table-responsive mt-3">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                            </thead>
                            <tbody>


                                @foreach (Course course in Model)
                                {
                                    <tr>
                                        <td>
                                            <img style="width:150px; height:150px" src="~/img/course/@course.Image" />
                                           
                                        </td>
                                        <td>
                                            @course.Title
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-controller="Course" asp-action="DetailCourseFature" asp-route-id="@course.Id">
                                                <i class="mdi mdi-information-variant"></i>
                                            </a>
                                            <a class="btn btn-warning" asp-controller="Course" asp-action="EditCourseFature" asp-route-id="@course.Id">
                                                <i class="mdi mdi-border-color"></i>
                                            </a>
                                            <a class="btn btn-danger" asp-controller="Course" asp-action="DeleteCourseFature" asp-route-id="@course.Id">
                                                <i class="mdi mdi-delete-variant"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

