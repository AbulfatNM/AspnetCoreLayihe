@model Bio
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Home Slider</h4>
                <form method="post" class="forms-sample mt-5" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Logo</label>
                        <input asp-for="Photo" class="form-control" id="exampleInputUsername1" accept="image/*">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <label>Small Black logo</label>
                        <input asp-for="PhotoSmalLogoBlack" class="form-control" id="exampleInputUsername1">
                        <span class="text-danger" asp-validation-for="PhotoSmalLogoBlack"></span>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <label>Small Wite logo</label>
                        <input asp-for="PhotoSmalLogoWhite" class="form-control" id="exampleInputUsername1">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <span class="text-danger" asp-validation-for="PhotoSmalLogoWhite"></span>
                        <input asp-for="Facebook" class="form-control" id="exampleInputUsername1"  placeholder="Write Facebook link">
                        <span class="text-danger" asp-validation-for="Facebook"></span>
                        <input asp-for="Linkedin" class="form-control" id="exampleInputUsername1" placeholder="Write Linkedin link">
                        <span class="text-danger" asp-validation-for="Linkedin"></span>
                        <input asp-for="Tiwitter" class="form-control" id="exampleInputUsername1"  placeholder="Write Tiwitter link">
                        <span class="text-danger" asp-validation-for="Tiwitter"></span>
                        <input asp-for="Description" class="form-control" id="exampleInputUsername1" placeholder="Write Description">
                        <span class="text-danger" asp-validation-for="Description"></span>
                        @*<textarea id="editor" asp-for="CategoryName" placeholder="Write the category name"></textarea>*@
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                </form>
                <div class="mt-3">
                    <a class="btn btn-dark text-white" asp-controller="Bio" asp-action="Index">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}


