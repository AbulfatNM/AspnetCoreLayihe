@model IEnumerable<Bio>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bio</h4>
                <div class="d-flex justify-content-end">
                    <a class="btn btn-success" asp-controller="Bio" asp-action="Create">Create Slider</a>

                    @*@if (ViewBag.SliderCount < 5)
                    {
                        <a class="btn btn-success" asp-controller="HomeSlider" asp-action="Create">Create Slider</a>
                    }*@

                </div>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Logo
                                </th>
                                <th>
                                    SmalBalckLogo
                                </th>
                                <th>
                                    SmalWhitekLogo
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Bio bio in Model)
                            {
                            <tr>
                                <td>
                                    <img style="width:100px; height:100px" src="~/img/logo/@bio.Logo" />
                                </td>
                                <td>
                                    <img style="width:100px; height:100px" src="~/img/icon/@bio.SmalLogoBlack" />
                                </td>
                                <td>
                                    <img style="width:100px; height:100px" src="~/img/icon/@bio.SmalLogoWhite" />
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Detail" asp-route-id="@bio.Id">
                                        <i class="mdi mdi-information-variant"></i>
                                    </a>
                                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@bio.Id">
                                        <i class="mdi mdi-border-color"></i>
                                    </a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@bio.Id">
                                        <i class="mdi mdi-delete-variant"></i>
                                    </a>
                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



