@model IEnumerable<Event> 
@{
    ViewData["Title"] = "Index";
}

<div class="row">
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Event</h4>
            <div class="d-flex justify-content-end">
                <a class="btn btn-success" asp-controller="Event" asp-action="Create">Create Course</a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Event events in Model)
                        {
                            <tr>
                                <td>
                                    <img style="width:150px; height:150px" src="~/img/event/@events.Image" />
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Detail" asp-route-id="@events.Id">
                                        <i class="mdi mdi-information-variant"></i>
                                    </a>
                                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@events.Id">
                                        <i class="mdi mdi-border-color"></i>
                                    </a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@events.Id">
                                        <i class="mdi mdi-delete-variant"></i>
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    </div>



