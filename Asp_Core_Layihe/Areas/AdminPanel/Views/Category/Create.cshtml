@model Category
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Category</h4>
                <form method="post" class="forms-sample mt-5">
                    <div class="form-group">
                        <label>Category Name </label>
                        <input asp-for="CategoryName" class="form-control" id="exampleInputUsername1" placeholder="Write the category name">
                        @*<textarea id="editor" asp-for="CategoryName" placeholder="Write the category name"></textarea>*@
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <span class="text-danger" asp-validation-for="CategoryName"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                </form>
                <div class="mt-3">
                    <a class="btn btn-dark text-white" asp-controller="Category" asp-action="Index">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
