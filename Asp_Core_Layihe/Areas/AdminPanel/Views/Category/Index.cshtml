@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 style="font-size:1.5rem;" class="card-title">Category</h3>
                <div class="table-responsive ">
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-success" asp-controller="Category" asp-action="Create" >Create Category</a>
                    </div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                   Category Name
                                </th>
                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category category in Model)
                            {
                                <tr>
                                    <td>
                                      @Html.Raw(category.CategoryName)  
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-controller="Category" asp-action="Detail" asp-route-id="@category.Id">
                                            <i class="mdi mdi-information-variant"></i>
                                        </a>
                                        <a class="btn btn-warning" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" >
                                            <i class="mdi mdi-border-color"></i>
                                        </a>
                                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                                            <i class="mdi mdi-delete-variant"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



