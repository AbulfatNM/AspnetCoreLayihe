@model IEnumerable<AboutWelcome>
@{
    ViewData["Title"] = "Index";
}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">About Welcome</h4>
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-success" asp-controller="AboutWelcome" asp-action="Create">Create Course</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Setting
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (AboutWelcome aboutWelcome in Model)
                                {
                                    <tr>
                                        <td>
                                            <img style="width:150px; height:150px" src="~/img/about/@aboutWelcome.Image" />
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Detail" asp-route-id="@aboutWelcome.Id">
                                                <i class="mdi mdi-information-variant"></i>
                                            </a>
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@aboutWelcome.Id">
                                                <i class="mdi mdi-border-color"></i>
                                            </a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@aboutWelcome.Id">
                                                <i class="mdi mdi-delete-variant"></i>
                                            </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

