@model AboutWelcome
@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <div class="row d-flex justify-content-center">
                    <img style="width:450px; height:250px" src="~/img/about/@Model.Image" />

                </div>
                <div class="text-center mt-3">
                    <h2>@Model.Title </h2>
                    <p>@Model.Description </p>
                </div>
                <form method="post" class="forms-sample mt-5" enctype="multipart/form-data">
                    <h4 class="card-title">Edit About Welcome</h4>
                    <div class="form-group">
                        <h5>About Welcome Image </h5>
                        <input asp-for="Photo" class="form-control" id="exampleInputUsername1" placeholder="Write the category name" accept="image/*">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <h5 class="mt3">About Welcome Title </h5>
                        <input asp-for="Title" class="form-control" id="exampleInputUsername1" placeholder="Write the Title">
                        <span class="text-danger" asp-validation-for="Title"></span>
                        <h5 class="mt3">About Welcome Description </h5>
                        <input asp-for="Description" class="form-control" id="exampleInputUsername1" placeholder="Write the Description">
                        <span class="text-danger" asp-validation-for="Description"></span>
                        @*<textarea id="editor" asp-for="CategoryName" placeholder="Write the category name"></textarea>*@
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                </form>
                <div class="mt-3">
                    <a class="btn btn-dark text-white" asp-controller="AboutWelcome" asp-action="Index">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

