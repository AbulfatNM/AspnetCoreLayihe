@model BlogVM
@{
    ViewData["Title"] = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>blog</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            @foreach (Blog blog in Model.Blogs)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-blog mb-60">
                        <div class="blog-img">
                            <a asp-action="Detail" asp-route-id="@blog.Id"><img src="~/img/blog/@blog.Image" alt="blog"></a>
                            <div class="blog-hover">
                                <i class="fa fa-link"></i>
                            </div>
                        </div>
                        <div class="blog-content">
                            <div class="blog-top">
                                <p>By @Model.AppUsers.FirstOrDefault(u=>u.Id==blog.AppUserId).FullName /  @blog.Date.ToString("MMMM/dd/yyyy").ToUpper()  /  <i class="fa fa-comments-o"></i> 4</p>
                            </div>
                            <div class="blog-bottom">
                                <h2><a href="blog-details.html">I must explain to you how all this a mistaken idea </a></h2>
                                <a asp-action="Detail" asp-route-id="@blog.Id">read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
        <div class="row">
            <div class="col">
                <nav aria-label="...">
                    <ul class="pagination pagination-lg" style="display:flex; justify-content:center">
                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                        {
                            if (ViewBag.Page == null)
                            {
                                if (i == 1)
                                {
                                    <li class="page-item disabled"><a class="page-link" href="/blog/index?page=@i">@i</a></li>


                                }
                                else
                                {
                                    <li class="page-item active"><a class="page-link" href="/blog/index?page=@i">@i</a></li>

                                }
                            }
                            else
                            {

                                if (ViewBag.Page == i)
                                {

                                    <li class="page-item disabled"><a class="page-link" href="/blog/index?page=@i">@i</a></li>


                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" href="/blog/index?page=@i">@i</a></li>

                                }
                            }

                        }
                    </ul>
                </nav>
                @*<div class="pagination" style="display:flex; justify-content:center;">
                    <ul>
                     
                    </ul>
                </div>*@
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
