@model IEnumerable<Teacher>
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            @foreach (Teacher teach in Model)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a asp-controller="Teacher" asp-action="Details" asp-route-id="@teach.Id"><img src="~/img/teacher/@teach.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a asp-controller="Teacher" asp-action="Details"asp-route-id="@teach.Id">@teach.FullName</a></h2>
                            <h4>@teach.Position</h4>
                            <ul>
                                <li><a href="@teach.TeacherContact.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="@teach.TeacherContact.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                                <li><a href="@teach.TeacherContact.Linkedin"><i class="zmdi zmdi-linkedin"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>




